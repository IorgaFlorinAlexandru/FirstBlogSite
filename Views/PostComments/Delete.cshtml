@model BlogSite.Models.PostComment
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Delete";
    string name = User.Identity.Name;
    string id = "d3bd0135-480e-4f78-af92-74af83b6e6a3";
    bool IsAdmin = id == UserManager.GetUserId(User);
}
@if (name == Model.OriginalPoster || IsAdmin)
{
    <div class="container-fluid form_container">
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>PostComment</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PostId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PostId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OriginalPoster)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OriginalPoster)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Comment_Day_published)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Comment_Day_published)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CommentText)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CommentText)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-danger" asp-route-id=@Model.PostId asp-controller="BlogPosts" asp-action="ShowBlogPost">Cancel</a>
            </form>
        </div>

    </div>
}
else
{
    <div class="container-fluid">
        <h1>You are not the original poster of this comment!!</h1>
        <a class="btn btn-danger" asp-controller="BlogPosts" asp-action="Index">Go back</a>
    </div>
}
